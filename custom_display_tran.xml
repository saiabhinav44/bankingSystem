<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/retr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/imgv"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From :"
        android:id="@+id/fr"
        android:textColor="#212121"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/imgv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromac"
        android:textColor="#212121"
        android:layout_toRightOf="@id/fr"
        android:text="NAT12345566"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgv"
        android:layout_below="@id/fr"
        android:textColor="#212121"
        android:text="TO :"
        android:layout_marginLeft="8dp"
        android:id="@+id/to"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#212121"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/to"
        android:layout_below="@id/fromac"
        android:text="NAT12345567"
        android:layout_marginLeft="17dp"
        android:id="@+id/toac"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#212121"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="15th NOV 2021\n       4:44 AM"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/data"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount : 14000000"
        android:textColor="#212121"
        android:layout_below="@id/data"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:id="@+id/amo"
        />
</RelativeLayout>